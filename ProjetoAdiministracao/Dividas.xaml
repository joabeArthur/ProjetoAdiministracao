<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetoAdiministracao.Dividas"
             Shell.NavBarIsVisible="False"
             BackgroundColor="LightSkyBlue">

       <Grid>

              <Grid.ColumnDefinitions>
                     <ColumnDefinition Width="Auto"/>
                     <ColumnDefinition Width="*"/>
                     <ColumnDefinition Width="Auto"/>
              </Grid.ColumnDefinitions>

              <Grid.RowDefinitions>
                     <RowDefinition Height="Auto"/>
                     <RowDefinition Height="*"/>
                     <RowDefinition Height="Auto"/>
              </Grid.RowDefinitions>

              <Button Clicked="SelecionarNaTelaFuncionarios"
                      Text="Adicionar"
                      FontSize="20"
                      HorizontalOptions="Center"
                      Margin="40,0,40,40"
                      Grid.Row="0"
                      Grid.Column="2"
                      Grid.ColumnSpan="2"/>

              <Button Text="Voltar"
                      Clicked="Voltar"
                      FontSize="20"
                      HorizontalOptions="Center"
                      Margin="40,0,40,40"
                      Grid.Row="1"
                      Grid.Column="2"
                      Grid.ColumnSpan="2"/>

              <Label Text="Dividas"
                     BackgroundColor="White"
                     HorizontalOptions="Center"
                     Padding="5"
                     Grid.Row="0"
                     Grid.Column="1"/>

              <ListView x:Name="ListaClientes"
                        HasUnevenRows="True"
                        ItemSelected="QuandoSelecionarUmItemNaLista"
                        HorizontalOptions="Fill"
                        VerticalOptions="Fill"
                        Grid.Row="2"
                        Grid.RowSpan="4"
                        Grid.ColumnSpan="6">


                     <ListView.ItemTemplate>
                            <DataTemplate>
                                   <ViewCell>

                                          <VerticalStackLayout Margin="47"
                                                               BackgroundColor="Gray"
                                                               HorizontalOptions="FillAndExpand"
                                                               VerticalOptions="FillAndExpand"
                                                               Grid.Row="2"
                                                               Grid.RowSpan="4"
                                                               Grid.ColumnSpan="6">


                                                 <Label Text="{Binding Divida.Id}"
                                                        FontSize="15"
                                                        HorizontalOptions="Center"
                                                        VerticalOptions="Center"
                                                        Grid.ColumnSpan="3"
                                                        Grid.RowSpan="3"/>

                                                 <Label Text="{Binding Divida.Nome}"
                                                        FontSize="15"
                                                        Margin="20"
                                                        HorizontalOptions="Center"
                                                        VerticalOptions="Start"
                                                        Grid.ColumnSpan="3"
                                                        Grid.RowSpan="3"/>

                                                 <Label Text="{Binding Divida.CPF}"
                                                        FontSize="15"
                                                        Margin="20"
                                                        HorizontalOptions="Center"
                                                        VerticalOptions="Start"
                                                        Grid.ColumnSpan="3"
                                                        Grid.RowSpan="3"/>

                                                 <Label Text="{Binding Divida.Valor}"
                                                        FontSize="15"
                                                        Margin="20"
                                                        HorizontalOptions="Center"
                                                        VerticalOptions="Start"
                                                        Grid.ColumnSpan="3"
                                                        Grid.RowSpan="3"/>

                                                 <Label Text="{Binding Divida.Data}"
                                                        FontSize="15"
                                                        Margin="20"
                                                        HorizontalOptions="Center"
                                                        VerticalOptions="Start"
                                                        Grid.ColumnSpan="3"
                                                        Grid.RowSpan="3"/>

                                          </VerticalStackLayout>
                                   </ViewCell>
                            </DataTemplate>
                     </ListView.ItemTemplate>
              </ListView>
       </Grid>
</ContentPage>
