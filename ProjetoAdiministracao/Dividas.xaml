<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetoAdiministracao.Dividas"
             Shell.NavBarIsVisible="False"
             BackgroundColor="LightSkyBlue">
    <StackLayout Padding="20" VerticalOptions="Center">
        
        <!-- Header Label -->
        <Label Text="Dividas"
               BackgroundColor="White"
               HorizontalOptions="Center"
               Padding="5" />

        <!-- Form -->
        <Frame BackgroundColor="White"
               Padding="10" 
               Margin="0,20,0,20">

            <StackLayout>

                <!-- Form Entries -->
                <StackLayout Orientation="Horizontal" 
                             Margin="0,10,0,0">

                    <Label Text="Nome:" 
                           WidthRequest="100"/>

                    <Entry x:Name="NameEntry" 
                           HorizontalOptions="FillAndExpand"/>

                </StackLayout>

                <StackLayout Orientation="Horizontal">

                    <Label Text="Valor:"    
                           WidthRequest="100"/>

                    <Entry x:Name="ValueEntry" 
                           HorizontalOptions="FillAndExpand"/>

                </StackLayout>

                <StackLayout Orientation="Horizontal">

                    <Label Text="Data:" 
                           WidthRequest="100"/>
                    <Entry x:Name="DateEntry" 
                           HorizontalOptions="FillAndExpand"/>

                </StackLayout>

                <StackLayout Orientation="Horizontal">

                    <Label Text="Produto:" 
                           WidthRequest="100"/>
                    <Entry x:Name="ProductEntry"
                           HorizontalOptions="FillAndExpand"/>

                </StackLayout>

                <StackLayout Orientation="Horizontal">

                    <Label Text="Quantidade:" 
                           WidthRequest="100"/>
                    <Entry x:Name="QuantityEntry" 
                           HorizontalOptions="FillAndExpand"/>

                </StackLayout>
                
                <!-- Trash Button -->
                <Button Text="🗑️"
                        Clicked="Apagar"
                        HorizontalOptions="End"
                        BackgroundColor="LightSkyBlue"/>

            </StackLayout>

        </Frame>

        

        <Frame x:Name="FrameApagar"
               IsVisible="false">

              <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Text="AVISO: dados excluidos vão se colocados na area de Recibos confimar?"
                   Grid.Row="0"
                   Grid.Column="1"/>
                
            <Button x:Name="NomeApagarSIM"
                    Clicked="ApagarSIM"
                    Text="Sim"
                    Grid.Row="1"
                    Grid.Column="0"/>

            <Button x:Name="NomeApagarNao"
                    Clicked="ApagarNAO"
                    Text="Não"
                    Grid.Row="1"
                    Grid.Column="2"/>

              </Grid>

        </Frame>

        <!-- Bottom Buttons -->
        <StackLayout Orientation="Horizontal" 
                     HorizontalOptions="Center" 
                     Spacing="20">

            <Button Text="Voltar" 
                    BackgroundColor="Cyan"
                    Clicked="Voltar"/>

            <Button Text="+" 
                    BackgroundColor="Blue"
                    Clicked="Adicionar"/>

        </StackLayout>
        
    </StackLayout>
</ContentPage>
