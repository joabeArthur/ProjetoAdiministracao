<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetoAdiministracao.CadastroFuncionarios"
             Shell.NavBarIsVisible="False"
             BackgroundColor="Gray">

       <ContentView>
              <StackLayout Padding="20"
                           VerticalOptions="Center">


                     <Label Text="CADASTRO DE FUNCIONARIOS"
                            HorizontalOptions="Center"
                            Padding="5"
                            FontSize="50"/>


                     <Frame BackgroundColor="LightGray"
                            Padding="10"
                            Margin="0,20,0,20">
                            <StackLayout> 

                                   <StackLayout Orientation="Horizontal"
                                                Margin="0,10,0,0">
                                          <Label  x:Name="IdLabel"
                                                  Text="Id:"
                                                  WidthRequest="100"/>
                                          <Label Text="{Binding Id}"
                                                 HorizontalOptions="FillAndExpand"/>
                                   </StackLayout>


                                   <StackLayout Orientation="Horizontal"
                                                Margin="0,10,0,0">
                                          <Label Text="Nome:"
                                                 WidthRequest="100"/>
                                          <Entry x:Name="NameEntry"
                                                 HorizontalOptions="FillAndExpand"/>
                                   </StackLayout>


                                   <StackLayout Orientation="Horizontal">
                                          <Label Text="CPF:"
                                                 WidthRequest="100"/>
                                          <Entry x:Name="CPFEntry"
                                                 HorizontalOptions="FillAndExpand"/>
                                   </StackLayout>


                                   <StackLayout Orientation="Horizontal">
                                          <Label Text="RG:"
                                                 WidthRequest="100"/>
                                          <Entry x:Name="RGEntry"
                                                 HorizontalOptions="FillAndExpand"/>
                                   </StackLayout>


                                   <StackLayout Orientation="Horizontal">
                                          <Label Text="Horario:"
                                                 WidthRequest="100"/>
                                          <Entry x:Name="HorarioEntry"
                                                 HorizontalOptions="FillAndExpand"/>
                                   </StackLayout>


                                   <StackLayout Orientation="Horizontal">
                                          <Label Text="Salario:"
                                                 WidthRequest="100"/>
                                          <Entry x:Name="SalarioEntry"
                                                 HorizontalOptions="FillAndExpand"/>
                                   </StackLayout>


                                   <StackLayout Orientation="Horizontal"
                                                HorizontalOptions="Center"
                                                Spacing="20"
                                                Margin="0,10,0,0">

                                          <Button Text="Limpar"
                                                  BackgroundColor="Black"
                                                  Clicked="Apagar"/>
                                          <Button Text="ðŸ—‘ï¸"
                                                  BackgroundColor="Black"
                                                  Clicked="Excluir"/>
                                          <Button Text="âœ”"
                                                  BackgroundColor="Black"
                                                  Clicked="Salvar"/>

                                   </StackLayout>

                                   <Frame x:Name="FrameErro"
                                          IsVisible="false"
                                          VerticalOptions="FillAndExpand"
                                          HorizontalOptions="FillAndExpand">

                                          <StackLayout>

                                                 <Label Text="Falha no salvamento tente de novo"
                                                        VerticalOptions="Start"
                                                        HorizontalOptions="Center"/>

                                                 <Button x:Name="BotaoDeCadastro"
                                                         Clicked="TentarDeNovo"
                                                         Text="Tentar de novo"
                                                         VerticalOptions="End"
                                                         BackgroundColor="Black"
                                                         HorizontalOptions="Center"/>

                                          </StackLayout>
                                   </Frame>

                                   <Frame x:Name="FrameAviso"
                                          IsVisible="false"
                                          VerticalOptions="FillAndExpand"
                                          HorizontalOptions="FillAndExpand">

                                          <StackLayout>

                                                 <Label Text="Tem certeza? os dados excluidos nÃ£o podem ser recuperados."
                                                        VerticalOptions="Start"
                                                        HorizontalOptions="Center"/>

                                                 <Button Clicked="Certeza"
                                                         Text="Excluir"
                                                         BackgroundColor="Black"
                                                         VerticalOptions="End"
                                                         HorizontalOptions="Center"/>

                                                 <Button Clicked="NaoExcluir"
                                                         Text="Cancelar"
                                                         BackgroundColor="Black"
                                                         VerticalOptions="End"
                                                         HorizontalOptions="Center"/>

                                          </StackLayout>
                                   </Frame>
                            </StackLayout>
                     </Frame>


                     <Button Text="Voltar"
                             BackgroundColor="Black"
                             HorizontalOptions="Center"
                             Clicked="Voltar"/>

              </StackLayout>
       </ContentView>

</ContentPage>
